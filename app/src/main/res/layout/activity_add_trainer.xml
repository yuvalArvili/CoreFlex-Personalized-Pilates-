<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <!-- Image preview -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_gray_background">

            <ImageView
                android:id="@+id/imageTrainer"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_perm_identity_24" />
        </FrameLayout>


        <!-- Button to select image -->
        <Button
            android:id="@+id/buttonSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Image"
            android:background="@drawable/button_background"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Trainer Name -->
        <EditText
            android:id="@+id/editTrainerName"
            android:hint="Trainer Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="14dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/editTrainerEmail"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="14dp"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Specialties Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specialties:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Specialties Options -->
        <CheckBox
            android:id="@+id/checkboxBeginners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beginners" />

        <CheckBox
            android:id="@+id/checkboxIntermediate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intermediate" />

        <CheckBox
            android:id="@+id/checkboxAdvanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced" />

        <!-- Save Button -->
        <Button
            android:id="@+id/buttonSaveTrainer"
            android:text="Save Trainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background" />
    </LinearLayout>
</ScrollView>
